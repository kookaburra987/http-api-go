<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.9.xsd">

    <changeSet id="1" author="Gino Dockx">
        <createTable tableName="news_channel">
            <column name="id" type="integer">
                <constraints primaryKey="true" primaryKeyName="pk_new_channel_id"/>
            </column>
            <column name="name" type="VARCHAR2">
                <constraints nullable="false" notNullConstraintName="nn_news_channel_name" unique="true" uniqueConstraintName="u_news_channel_name"/>
            </column>
            <column name="description" type="VARCHAR2">
                <constraints nullable="false" notNullConstraintName="nn_new_channel_description"/>
            </column>
        </createTable>
        <createSequence sequenceName="news_channel_seq" dataType="integer" />
    </changeSet>

</databaseChangeLog>